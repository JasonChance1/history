<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:padding="15dp">

    <EditText
        android:id="@+id/et_username_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入账号"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:background="@drawable/frame_input"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="请输入密码"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:background="@drawable/frame_input"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="登       录"
        android:background="@drawable/login_click"
        android:textSize="24sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <CheckBox
            android:id="@+id/remember_password_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="记住密码"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/auto_login_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="自动登录"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_for_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/deepblue"
            android:background="@drawable/btn_withou_tbackground"
            android:text="注册账号"/>
        <Button
            android:id="@+id/btn_for_resetpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textColor="@color/deepblue"
            android:textSize="16sp"
            android:background="@drawable/btn_withou_tbackground"
            android:text="忘记密码"/>

    </LinearLayout>

</LinearLayout>