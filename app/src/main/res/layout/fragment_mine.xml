<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="fragment.MineFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/profile_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="1dp"
            android:layout_gravity="center"
            app:civ_border_color="#fc9"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/nickname_mine_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:drawableRight="@drawable/entry"/>

    </LinearLayout>
    <Button
            android:id="@+id/collections_btn_mind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="我的收藏"
            android:gravity="left"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/entry"/>
    <Button
        android:id="@+id/browse_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:text="浏览记录"
        android:gravity="left"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:drawableRight="@drawable/entry"/>

        <Button
            android:id="@+id/setting_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="设置"
            android:gravity="left"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/entry"/>

</LinearLayout>