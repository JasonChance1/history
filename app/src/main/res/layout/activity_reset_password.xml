<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ResetPasswordActivity">


    <EditText
        android:id="@+id/username_reset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/frame_input"
        android:hint="请输要修改密码的账号"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/password_original"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/frame_input"
        android:hint="请输入原始密码"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/password_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/frame_input"
        android:hint="请输入新密码"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/password_reset_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text="确认更改"

        android:layout_marginTop="30dp"
        android:background="@drawable/login_click"/>
</LinearLayout>